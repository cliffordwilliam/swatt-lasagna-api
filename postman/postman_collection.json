            "body": {
              "mode": "raw",
              "raw": "{\n  \"itemName\": \"new\",\n  \"price\": 999\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/item/{{item_id}}",
